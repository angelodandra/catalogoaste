"use client";

import { useEffect, useState } from "react";
import { supabaseBrowser } from "@/lib/supabaseBrowser";

type Catalog = {
  id: string;
  title: string;
  is_active: boolean;
  owner_phone: string | null;
  created_at: string;
};

export default function AdminPage() {
  const [title, setTitle] = useState("");
  const [msg, setMsg] = useState("");
  const [catalogs, setCatalogs] = useState<Catalog[]>([]);
  const [loading, setLoading] = useState(false);

  async function load() {
    const { data, error } = await supabaseBrowser
      .from("catalogs")
      .select("id,title,is_active,owner_phone,created_at")
      .order("created_at", { ascending: false });

    if (!error) setCatalogs((data as any) || []);
  }

  useEffect(() => {
    load();
  }, []);

  async function createCatalog() {
    setMsg("");
    const t = title.trim();
    if (!t) return setMsg("Inserisci un titolo.");

    setLoading(true);
    try {
      const res = await fetch("/api/admin/create-catalog", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ title: t }),
      });

      const json = await res.json();
      if (!res.ok) {
        setMsg(json.error || "Errore creazione catalogo");
        return;
      }

      setTitle("");
      setMsg("Catalogo creato ✅");
      await load();
    } finally {
      setLoading(false);
    }
  }

  async function addProductSingle(e: React.FormEvent<HTMLFormElement>) {
    e.preventDefault();
    const form = e.currentTarget;
    const fd = new FormData(form);

    setLoading(true);
    try {
      const res = await fetch("/api/admin/add-product", { method: "POST", body: fd });
      const json = await res.json();
      if (!res.ok) {
        alert(json.error || "Errore upload singolo");
        return;
      }
      alert("Foto aggiunta ✅ (in bozza)");
      form.reset();
    } finally {
      setLoading(false);
    }
  }

  async function addProductsBulk(e: React.FormEvent<HTMLFormElement>) {
    e.preventDefault();
    const form = e.currentTarget;
    const fd = new FormData(form);

    const files = fd.getAll("files").filter(Boolean);
    if (!files.length) {
      alert("Seleziona almeno una foto.");
      return;
    }

    setLoading(true);
    try {
      const res = await fetch("/api/admin/add-products-bulk", { method: "POST", body: fd });
      const json = await res.json();
      if (!res.ok) {
        alert(json.error || "Errore upload multiplo");
        return;
      }
      alert(`Caricate ${json.insertedCount} foto ✅ (in bozza)`);
      form.reset();
    } finally {
      setLoading(false);
    }
  }

  async function deleteCatalog(c: Catalog) {
    const ok = confirm(
      `Eliminare DEFINITIVAMENTE il catalogo "${c.title}"?\n\nVerranno cancellati anche tutti i prodotti e le foto.`
    );
    if (!ok) return;

    setLoading(true);
    try {
      const res = await fetch("/api/admin/delete-catalog", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ catalogId: c.id }),
      });

      const json = await res.json();
      if (!res.ok) {
        alert(json.error || "Errore eliminazione");
        return;
      }

      alert("Catalogo eliminato ✅");
      await load();
    } finally {
      setLoading(false);
    }
  }

  return (
    <div className="mx-auto max-w-5xl p-4">
      {/* HEADER + LOGO */}
      <div className="mb-6 flex flex-col items-center gap-2 text-center">
        <img src="/logo.jpg" alt="Logo azienda" className="h-20 w-auto" />
        <div className="text-2xl font-bold">Pannello Admin</div>
        <div className="text-sm text-gray-600">Carica foto, assegna casse, inserisci prezzi, pubblica e gestisci ordini</div>

        {/* NAV PRINCIPALE */}
        <div className="mt-2 flex flex-wrap justify-center gap-2">
          <a
            href="/admin/orders"
            className="rounded-lg bg-black px-4 py-2 font-semibold text-white"
          >
            Gestisci ordini
          </a>

            <a
              href="/admin/customers"
              className="block rounded-2xl border bg-white p-4 shadow-sm hover:bg-gray-50"
            >
              <div className="text-lg font-bold">Clienti</div>
              <div className="text-sm text-gray-600">Gestisci autorizzazioni (revoca/riattiva)</div>
            </a>

          <button
            onClick={load}
            disabled={loading}
            className="rounded-lg border bg-white px-4 py-2 font-semibold disabled:opacity-60"
          >
            Aggiorna cataloghi
          </button>
        </div>
      </div>

      {/* CREA CATALOGO */}
      <div className="rounded-2xl border bg-white p-4 shadow-sm">
        <div className="text-sm font-semibold">Crea nuovo catalogo</div>

        <div className="mt-2 flex flex-col gap-2 sm:flex-row">
          <input
            value={title}
            onChange={(e) => setTitle(e.target.value)}
            placeholder="Titolo catalogo (es. Catalogo 18/01)"
            className="w-full rounded-lg border px-3 py-2 focus:outline-none focus:ring-2 focus:ring-black/30"
          />
          <button
            onClick={createCatalog}
            disabled={loading}
            className="rounded-lg bg-black px-4 py-2 font-semibold text-white disabled:opacity-60"
          >
            Crea
          </button>
        </div>

        {msg && <div className="mt-2 text-sm">{msg}</div>}
      </div>

      <h2 className="mt-6 text-lg font-bold">Cataloghi</h2>

      <div className="mt-3 grid gap-3">
        {catalogs.map((c) => (
          <div key={c.id} className="rounded-2xl border bg-white p-4 shadow-sm">
            <div className="flex flex-col gap-3 sm:flex-row sm:items-start sm:justify-between">
              <div>
                <div className="text-base font-bold">{c.title}</div>
                <div className="mt-1 text-xs text-gray-600">
                  {new Date(c.created_at).toLocaleString("it-IT")} — Stato:{" "}
                  <span className="font-semibold">{c.is_active ? "APERTO" : "CHIUSO"}</span>
                </div>
              </div>

              {/* BOTTONI AZIONI */}
              <div className="flex flex-wrap gap-2">
                <a
                  href={`/catalog/${c.id}`}
                  target="_blank"
                  rel="noreferrer"
                  className="rounded-lg border bg-white px-3 py-2 text-sm font-semibold"
                >
                  Apri catalogo cliente
                </a>

                <button
                  onClick={async () => {
                    await navigator.clipboard.writeText(`${window.location.origin}/catalog/${c.id}`);
                    alert("Link copiato ✅");
                  }}
                  className="rounded-lg border bg-white px-3 py-2 text-sm font-semibold"
                >
                  Copia link
                </button>

                <a
                  href={`/admin/catalog/${c.id}/pricing`}
                  className="rounded-lg bg-blue-600 px-3 py-2 text-sm font-bold text-white"
                >
                  Prezzi
                </a>
                <a
                  className="rounded-lg border bg-white px-3 py-2 text-sm font-semibold"
                  href={`/api/admin/catalog/pdf?catalogId=${c.id}`}
                  target="_blank"
                  rel="noreferrer"
                >
                  PDF catalogo
                </a>

                <button
                  onClick={() => deleteCatalog(c)}
                  disabled={loading}
                  className="rounded-lg border border-red-200 bg-red-50 px-3 py-2 text-sm font-bold text-red-700 disabled:opacity-60"
                >
                  Elimina
                </button>
              </div>
            </div>

            {/* UPLOAD SINGOLO */}
            <div className="mt-4 rounded-xl border bg-gray-50 p-3">
              <div className="text-sm font-semibold">Upload singolo (bozza)</div>
              <form onSubmit={addProductSingle} className="mt-2 flex flex-col gap-2 sm:flex-row sm:items-center">
                <input type="hidden" name="catalogId" value={c.id} />

                <input
                  name="boxNumber"
                  placeholder="Numero cassa (es. 12)"
                  required
                  className="w-full rounded-lg border px-3 py-2 focus:outline-none focus:ring-2 focus:ring-black/30 sm:w-56"
                />

                <input
                  type="file"
                  name="file"
                  accept="image/*"
                  required
                  className="w-full rounded-lg border bg-white px-3 py-2 sm:flex-1"
                />

                <button
                  type="submit"
                  disabled={loading}
                  className="rounded-lg bg-black px-4 py-2 font-semibold text-white disabled:opacity-60"
                >
                  Aggiungi foto
                </button>
              </form>
            </div>

            {/* UPLOAD MULTIPLO */}
            <div className="mt-3 rounded-xl border bg-gray-50 p-3">
              <div className="text-sm font-semibold">Upload multiplo (bozza)</div>
              <form onSubmit={addProductsBulk} className="mt-2 flex flex-col gap-2 sm:flex-row sm:items-center">
                <input type="hidden" name="catalogId" value={c.id} />

                <input
                  name="boxStart"
                  placeholder="Cassa iniziale (es. 1)"
                  required
                  inputMode="numeric"
                  className="w-full rounded-lg border px-3 py-2 focus:outline-none focus:ring-2 focus:ring-black/30 sm:w-56"
                />

                <input
                  name="boxStep"
                  defaultValue="1"
                  inputMode="numeric"
                  className="w-full rounded-lg border px-3 py-2 focus:outline-none focus:ring-2 focus:ring-black/30 sm:w-40"
                />

                <input
                  type="file"
                  name="files"
                  accept="image/*"
                  multiple
                  required
                  className="w-full rounded-lg border bg-white px-3 py-2 sm:flex-1"
                />

                <button
                  type="submit"
                  disabled={loading}
                  className="rounded-lg bg-black px-4 py-2 font-semibold text-white disabled:opacity-60"
                >
                  Carica tutte
                </button>
              </form>

              <div className="mt-2 text-xs text-gray-600">
                Le foto vengono ordinate per nome file. Le casse: start, start+step, start+2*step…
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  );
}